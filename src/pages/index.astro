---
import Layout from '../layouts/Layout.astro';
import PixelMain from '../components/PixelMain';
import '../i18n/init';

// 增加meta標籤以提升SEO
const title = "季先生數位顧問 - 專業軟體開發與數位轉型顧問";
const description = "專業軟體開發與數位轉型顧問，提供企業資源規劃(ERP)系統、電子商務平台(EC)、網站設計與開發、系統維護與技術支援等服務。幫助您的企業邁向數位未來。";
const keywords = "軟體開發, 數位轉型, ERP系統, 電子商務, 網站設計, 系統維護, DevOps, 台灣, 季先生";
const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

<Layout 
  title={title} 
  description={description} 
  keywords={keywords}
  canonicalURL={canonicalURL}
>
	<main>
		<PixelMain client:load />
	</main>

	<!-- 添加結構化數據，提高SEO -->
	<script is:inline type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "季先生科技官方網站",
			"url": "https://mr-chi-tech.com",
			"potentialAction": {
				"@type": "SearchAction",
				"target": "https://mr-chi-tech.com/search?q={search_term_string}",
				"query-input": "required name=search_term_string"
			}
		}
	</script>
</Layout>

<style>
	/* 確保主內容佔滿整個螢幕並進行RWD優化 */
	main {
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
		position: relative;
	}

	/* 確保頁面內容可以適應不同螢幕大小 */
	@media (max-width: 768px) {
		main {
			overflow-y: auto;
			-webkit-overflow-scrolling: touch;
		}
	}

	/* 優化頁面加載性能 */
	:global(body) {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	:global(img, video) {
		max-width: 100%;
		height: auto;
	}
</style>
