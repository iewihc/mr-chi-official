---
import Layout from './Layout.astro';
---

<Layout>
  <style>
    @font-face {
      font-family: 'PixelFont';
      src: url('https://fonts.cdnfonts.com/css/press-start-2p');
    }
    .font-pixel {
      font-family: monospace;
      letter-spacing: -0.5px;
      font-weight: bold;
    }
    /* 這裡調整 h1、p 等 Markdown 內容的樣式 */
    h1 {
      font-family: 'PixelFont', monospace;
      letter-spacing: -0.5px;
      font-weight: bold;
      font-size: 3rem;
      margin-bottom: 1rem;
      text-align: center;
    }
    p {
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 1rem;
    }
    article {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background-color: #fff;
      border: 2px solid #ccc;
      box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
      image-rendering: pixelated;
    }
    a {
      color: #2563eb;
      text-decoration: underline;
    }
  </style>
  <article>
    <header></header>
    <section>
      <slot />
    </section>
  </article>
</Layout>
