---
import "../styles/tailwind.css";
import "../styles/global.css";
import "../styles/pixel-theme.css";
import { SEO } from "astro-seo";

interface Props {
	title: string;
	description?: string;
	keywords?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title, 
	description = "季先生科技 - 專業的軟體開發和技術顧問團隊，提供網站開發、ERP整合與技術諮詢服務", 
	keywords = "季先生科技, 軟體開發, 技術顧問, ERP系統, 網站開發, 系統維護, 網頁設計, 台北, 系統整合", 
	image = "/chi-logo-white.jpg",
	canonicalURL = Astro.url.href
} = Astro.props;

// 生成結構化數據
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "季先生科技",
  "url": "https://mr-chi-tech.com",
  "logo": "https://mr-chi-tech.com/chi-logo-white.jpg",
  "contactPoint": {
    "@type": "ContactPoint",
    "email": "mr.chi.service@gmail.com",
    "contactType": "customer service"
  },
  "description": description
};
---

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<SEO
			title={title}
			description={description}
			canonical={canonicalURL}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
					url: canonicalURL,
				},
				optional: {
					siteName: "季先生科技",
					description: description,
					locale: "zh_TW",
				},
				image: {
					alt: "季先生科技 Logo",
				},
			}}
			twitter={{
				card: "summary_large_image",
				site: "@mrchitech",
				title: title,
				description: description,
				image: image,
				imageAlt: "季先生科技 Logo",
			}}
			extend={{
				meta: [
					{ name: "keywords", content: keywords },
					{ name: "author", content: "季先生科技" },
					{ name: "theme-color", content: "#00ff00" },
					{ name: "mobile-web-app-capable", content: "yes" },
					{ name: "apple-mobile-web-app-capable", content: "yes" },
					{ name: "apple-mobile-web-app-status-bar-style", content: "black-translucent" },
				],
				link: [
					{ rel: "manifest", href: "/manifest.json" },
					{ rel: "apple-touch-icon", href: "/apple-touch-icon.png" },
				],
			}}
		/>
		
		<!-- 結構化數據 -->
		<script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />
		
		<!-- 預加載字體以提高性能 -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap">
		
		<!-- 字體 -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Unifont', monospace;
		background-color: #000000;
		color: #ffffff;
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		position: relative;
	}
	
	:focus-visible {
		outline: 2px solid #00ff00;
		outline-offset: 2px;
	}
	
	/* 星空背景效果 */
	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: radial-gradient(circle at center, #ffffff 1px, transparent 1px);
		background-size: 50px 50px;
		opacity: 0.1;
		z-index: -1;
		pointer-events: none;
	}

	/* 吃豆人和小精靈動畫 */
	.pacman {
		position: relative;
		border-radius: 50%;
		overflow: hidden;
	}

	.pacman-mouth {
		position: absolute;
		top: 50%;
		right: 0;
		width: 50%;
		height: 0;
		border-bottom: 2.5px solid #000000;
		transform-origin: left;
		animation: chomp 0.3s linear infinite;
	}

	@keyframes chomp {
		0% { transform: rotate(0deg); }
		50% { transform: rotate(45deg); }
		100% { transform: rotate(0deg); }
	}

	.dot {
		animation: blink 2s infinite;
	}

	.ghost {
		position: relative;
		border-radius: 50% 50% 0 0;
		animation: float 2s ease-in-out infinite;
	}

	.ghost::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 100%;
		height: 2px;
		background: linear-gradient(90deg, transparent 25%, currentColor 25%, currentColor 50%, transparent 50%);
		background-size: 4px 4px;
	}

	@keyframes blink {
		0% { opacity: 1; }
		50% { opacity: 0.5; }
		100% { opacity: 1; }
	}

	@keyframes float {
		0% { transform: translateY(0); }
		50% { transform: translateY(-3px); }
		100% { transform: translateY(0); }
	}
	
	/* 增強 RWD 的全域樣式 */
	img {
		max-width: 100%;
		height: auto;
	}
	
	/* 提高對比度以改善可訪問性 */
	a:focus {
		outline: 2px solid #00ff00;
		outline-offset: 2px;
	}
	
	/* 針對螢幕閱讀器的可訪問性類 */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
	
	/* 打印樣式優化 */
	@media print {
		body {
			background: white;
			color: black;
		}
		body::before {
			display: none;
		}
	}
</style>
